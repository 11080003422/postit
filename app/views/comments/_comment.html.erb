<% show_post ||= false %>

<div class="row">
  <% if logged_in? %>
    <div class="span0 well text-center">
      <%= link_to vote_post_comment_path(comment.post, comment, vote: true), method: :post do %>
        <i class="icon-arrow-up"></i>
      <% end %>
      <br/>
      <%= comment.vote_sum %>
      <br/>
      <%= link_to vote_post_comment_path(comment.post, comment, vote: false), method: :post do %>
        <i class="icon-arrow-down"></i>
      <% end %>
    </div>
    <% end %>
  <div class="well span8">
    <em><%= comment.body %><% if show_post %> <small>on <%= link_to(comment.post.title, post_path(comment.post)) %><% end %></small></em>
    <br/>
    <span class="quiet">by</span> <%= comment.creator.username %>
    <small>at <%= format_date(comment.created_at) %></small>
  </div>
  </div>
