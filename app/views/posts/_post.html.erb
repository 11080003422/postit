<div class="row">
  <div class="span8 well">
    <%= render post.categories %>
    <h4><%= link_to post.title, fix_address(post.url) %></h4>
    <p><%= post.description %></p>
    <p>
      <span class="quiet">posted by</span> <%= post.creator.username %>
      <small>at <%= format_date(post.created_at) %></small>
    </p>
    <p>
      <span>
        <%= link_to " #{pluralize(post.comments.size, 'comment')}", post_path(post) %>
      </span>
    </p>
  </div>
</div>