<div class="row">
  <div class="span0 well text-center">
    <%= link_to vote_post_path(post, vote: true), method: :post do %>
      <i class="icon-arrow-up"></i>
    <% end %>
    <br/>
    <%= post.vote_sum %>
    <br/>
    <%= link_to vote_post_path(post, vote: false), method: :post do %>
      <i class="icon-arrow-down"></i>
    <% end %>
  </div>
  <div class="span8 well">
    <%= render post.categories %>
    <h4><%= link_to post.title, fix_address(post.url) %></h4>
    <p><%= post.description %></p>
    <p>
      <span class="quiet">posted by</span> <%= post.creator.username %>
      <small>at <%= format_date(post.created_at) %></small>
    </p>
    <p>
      <span>
        <%= link_to " #{pluralize(post.comments.size, 'comment')}", post_path(post) %>
      </span>
    </p>
  </div>
</div>